<div>
  <div class="form-container-myProduct">
    <h1>Formulario de Producto</h1>
    <form action="/publicar/editmyproducts/{{product._id}}" method="post">
      <label for="title">Título:</label>

      <input type="text" name="title" required disabled disabled value="{{product.title}}" />
      <input type="checkbox" class="editCheckbox" > Habilitar Edición
<br/>

      <label for="description">Descripción:</label>
      <textarea name="description" required disabled>{{product.description}}</textarea>
        <input type="checkbox" class="editCheckbox"> Habilitar Edición

      <br />

      <label for="price">Precio:</label>
      <input type="number" name="price" required disabled value="{{product.price}}" />
        <input type="checkbox" class="editCheckbox"> Habilitar Edición
<br/>

      <label for="thumbnail">Imagen del producto:</label>
      <input
        type="text"
        name="thumbnail"
        required disabled
        value="{{product.thumbnail}}"
      />
        <input type="checkbox" class="editCheckbox"> Habilitar Edición

      <br />

      <label for="category">Categoría:</label>
      <input type="text" name="category" required disabled value="{{product.category}}" />
        <input type="checkbox" class="editCheckbox"> Habilitar Edición
<br />

      <label for="marca">Marca:</label>
      <input type="text" name="marca" required disabled value="{{product.marca}}" />
        <input type="checkbox" class="editCheckbox"> Habilitar Edición
<br
      />

      <label for="stock">Stock:</label>
      <input type="number" name="stock" required disabled value="{{product.stock}}" />
        <input type="checkbox" class="editCheckbox"> Habilitar Edición

      <br
      />

      <label for="estado">Estado:</label>
      <select name="estado" required>
        <option value="on" {{#eq product.estado 'on'}}selected{{/eq}}>On</option>
        <option value="pause" {{#eq product.estado 'pause'}}selected{{/eq}}>Pause</option>
        <option value="off" {{#eq product.estado 'off'}}selected{{/eq}}>Off</option>
      </select><br />
      <button type="submit">Guardar Producto</button>
    </form>

  </div>
</div>
<script>
  let warmMessage = '{{warmMessage}}'
</script>

<script src="/static/js/editMyProduct.js"></script>